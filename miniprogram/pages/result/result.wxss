/* pages/takeLessons/lessonList.wxss */

.container {
  
}

.lesson-total {
  position: fixed;
  width: calc(100% - 20rpx);
  top: 45rpx;
  left: 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  z-index: 100;
  background: #eef4f5;
  border-top-left-radius:8rpx;
  border-top-right-radius:8rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  background: #7DD100;
  z-index: 100;
  height: 20rpx;
  width: 100%;
}

.content{
  padding: 120rpx 30rpx 20rpx;
  position: relative;
  z-index: 10;
  width: 100%;
  box-sizing: border-box;
}
.lesson-list{
  height: 100%;
  overflow-y: scroll;
}
.lesson-list-item {
  margin-bottom:16rpx;
}

.modal{
   padding: 20rpx 10rpx 20rpx 10rpx; 
   background: #7DD100;
   position: fixed;
   top: 0;
   width: 100%;
   box-sizing: border-box;
}
.scroll-wrap {
  width: 100%; 
  height: calc(100% - 72rpx);
  position: relative;
  padding-top:72rpx;
  background: #eef4f5;
  box-sizing: content-box;
  overflow: hidden;
  border-radius: 8rpx;
}